		<relativePath>./../</relativePath>
	</parent>
	<artifactId>admin</artifactId>
	<packaging>war</packaging>
	<name>Admin-SoftShaper</name>

	<profiles>
		<profile>
			<id>mongo-shek</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<mongodbUrl>5.19.254.162:873</mongodbUrl>
			</properties>
		</profile>
		<profile>
			<id>elasticsearch-shek</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<elasticsearchHost>5.19.254.162</elasticsearchHost>
				<elasticsearchPort>9300</elasticsearchPort>
			</properties>
		</profile>
		<profile>
			<id>elasticsearch-localhost</id>
			<properties>
				<elasticsearchHost>127.0.0.1</elasticsearchHost>
				<elasticsearchPort>9300</elasticsearchPort>
			</properties>
		</profile>
		<profile>
			<id>postgres-localhost</id>
			<properties>
				<bdUrl>jdbc:postgresql://localhost:5432/zorb</bdUrl>
				<bdDriverClassName>org.postgresql.Driver</bdDriverClassName>
				<bdDatabaseType>POSTGRESQL</bdDatabaseType>
				<bdLogin>postgres</bdLogin>
				<bdPass>11111111</bdPass>
			</properties>
		</profile>
		<profile>
			<id>postgres-shek</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<bdUrl>jdbc:postgresql://5.19.254.162:3306/zorb</bdUrl>
				<bdDriverClassName>org.postgresql.Driver</bdDriverClassName>
				<bdDatabaseType>POSTGRESQL</bdDatabaseType>
				<bdLogin>ashek</bdLogin>
				<bdPass>11111111</bdPass>
			</properties>
		</profile>

		<profile>
			<id>deploy-docker</id>
			<build>
				<plugins>
					<!-- Docker -->
					<plugin>
						<groupId>org.softshaper</groupId>
						<artifactId>docker-sh-plugin</artifactId>
						<version>0.0.6-SNAPSHOT</version>
						<executions>
							<execution>
								<phase>deploy</phase>
								<goals>
									<goal>stop</goal>
									<goal>build</goal>
									<goal>push </goal>
									<goal>start</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<imageName>localhost:5000/softshaper</imageName>
							<forceTags>true</forceTags>
							<dockerDirectory>./admin/docker</dockerDirectory>
							<dockerHost>http://10.0.2.15:2375</dockerHost>
							<serverId>softshaper-snapshots</serverId>
							<registryUrl>http://localhost:5000</registryUrl>
							<retryPushCount>1</retryPushCount>
							<imageTags>
								<imageTag>${project.version}</imageTag>
								<imageTag>latest</imageTag>
							</imageTags>
							<resources>
								<resource>
									<targetPath>/</targetPath>
									<directory>${project.build.directory}</directory>
									<include>${project.build.finalName}.war</include>
								</resource>
							</resources>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

